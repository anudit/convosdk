{
  "name": "@theconvospace/sdk",
  "version": "0.5.1",
  "description": "SDK containing all the functions you'll need to build on theconvo.space",
  "main": "./lib/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/index.d.ts",
  "typings": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "require": "./lib/index.js",
      "node": "./lib/index.js",
      "import": "./lib/esm/index.js",
      "default": "./lib/esm/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "lib/**/*",
    "dist/**/*"
  ],
  "scripts": {
    "build": "pnpm lint && pnpm build:clean && pnpm build:node && pnpm build:browser",
    "build:clean": "rimraf lib && rimraf dist",
    "build:node": "tsup src/index.ts --format esm,cjs --outDir lib --dts --minify --legacy-output --clean",
    "build:browser": "tsup src/index.ts --format iife --outDir dist --minify --clean",
    "bench": "cd ./../../benchmarks && pnpm bench",
    "example": "pnpm build && cd examples/nextjs && pnpm dev",
    "lint": "eslint ./src/ --fix",
    "release": "pnpm build && npm publish",
    "typegen": "typechain --target ethers-v5 --out-dir ./src/adaptors/types/ './src/adaptors/abis/*.json'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anudit/convosdk.git"
  },
  "license": "MIT",
  "author": "Anudit Nagar <nagaranudit@gmail.com> (https://github.com/anudit)",
  "engines": {
    "node": ">=12.9.0"
  },
  "keywords": [
    "convo",
    "space",
    "comments",
    "section",
    "conversations",
    "ethereum",
    "web3"
  ],
  "bugs": {
    "url": "https://github.com/anudit/convosdk/issues"
  },
  "homepage": "https://github.com/anudit/convosdk#readme",
  "devDependencies": {
    "@typechain/ethers-v5": "^10.0.0",
    "@types/node": "^17.0.41",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.8.1",
    "tsup": "^6.1.0",
    "typechain": "^8.0.0",
    "typescript": "4.6.4"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.6.3",
    "@ethersproject/providers": "^5.6.8",
    "abort-controller": "^3.0.0",
    "cross-fetch": "^3.1.5",
    "ethers": "^5.6.8",
    "siwe": "^1.1.6"
  }
}
